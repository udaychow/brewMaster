# Server Configuration
NODE_ENV=development
PORT=3019
LOG_LEVEL=info
LOG_FORMAT=json

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/brewmaster_db

# Claude AI Configuration
ANTHROPIC_API_KEY=your_claude_api_key_here

# Redis Configuration (for task queue)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_WINDOW_MS=60000
AI_RATE_LIMIT_MAX_REQUESTS=10

# Security
REQUEST_TIMEOUT_MS=30000
MAX_REQUEST_SIZE_MB=10

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL_MS=60000

# Agent Configuration
ENABLE_SCHEDULED_TASKS=true
DEFAULT_TASK_TIMEOUT_MS=300000
MAX_CONCURRENT_PRODUCTION_TASKS=2
MAX_CONCURRENT_INVENTORY_TASKS=3
MAX_CONCURRENT_COMPLIANCE_TASKS=1
MAX_CONCURRENT_CUSTOMER_TASKS=2
MAX_CONCURRENT_FINANCIAL_TASKS=1